{
  "manifest_version": 3,
  "name": "CodeClock",
  "version": "1.0.0",
  "description": "Track and analyze your coding problem-solving time",
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.codechef.com/*",
    "https://codeforces.com/*",
    "https://atcoder.jp/*",
    "https://www.hackerearth.com/*",
    "https://www.hackerrank.com/*",
    "https://practice.geeksforgeeks.org/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/*",
        "https://www.codechef.com/*",
        "https://codeforces.com/*",
        "https://atcoder.jp/*",
        "https://www.hackerearth.com/*",
        "https://www.hackerrank.com/*",
        "https://practice.geeksforgeeks.org/*"
      ],
      "js": [
        "assets/colors.js",
        "assets/content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["index.html", "assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "assets/background.js",
    "type": "module"
  }
} 