{
  "manifest_version": 3,
  "name": "CodeClock",
  "version": "1.0",
  "description": "Track and analyze your coding problem-solving time across different difficulty levels",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://*.leetcode.com/*",
    "*://*.hackerrank.com/*",
    "*://*.codechef.com/*",
    "*://*.codeforces.com/*",
    "*://*.atcoder.jp/*",
    "*://*.geeksforgeeks.org/*",
    "*://*.hackerearth.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js"
  }
}
