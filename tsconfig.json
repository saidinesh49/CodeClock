{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"sourceMap": true,
		"declaration": false,
		"allowJs": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"],
			"chart.js": ["node_modules/chart.js"]
		},
		"lib": ["DOM", "DOM.Iterable", "ESNext"],
		"typeRoots": [
			"node_modules/@types",
			"node_modules/chart.js",
			"./src/@types"
		],
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"include": ["src/**/*.ts", "src/custom.d.ts", "src/**/*"],
	"exclude": ["node_modules", "dist"],
	"ts-node": {
		"compilerOptions": {
			"module": "CommonJS"
		}
	}
}
