{
  "manifest_version": 3,
  "name": "CodeClock",
  "version": "1.0",
  "description": "Track and analyze your coding problem-solving time across different difficulty levels",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "https://leetcode.com/*",
    "https://www.hackerrank.com/*",
    "https://www.codechef.com/*",
    "https://codeforces.com/*",
    "https://atcoder.jp/*",
    "https://practice.geeksforgeeks.org/*",
    "https://www.hackerearth.com/*"
  ],
  "web_accessible_resources": [{
    "resources": [
      "timer-overlay.js",
      "vendor/chart.min.js",
      "vendor/dayjs.min.js"
    ],
    "matches": [
      "https://leetcode.com/*",
      "https://www.hackerrank.com/*",
      "https://www.codechef.com/*",
      "https://codeforces.com/*",
      "https://atcoder.jp/*",
      "https://practice.geeksforgeeks.org/*",
      "https://www.hackerearth.com/*"
    ]
  }],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/logo.png",
      "48": "images/logo.png",
      "128": "images/logo.png"
    }
  },
  "icons": {
    "16": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
